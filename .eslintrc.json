{
    "env": {
        "node": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "airbnb-base",
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module",
      "allowImportExportEverywhere": false
    },
    "rules": {
        "no-useless-escape": 0,
        "no-param-reassign": 0,
        "no-unused-vars": [1],
        "no-console": [
          "warn", {"allow": ["warn", "error", "info"]}
        ],
        "indent": [0],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
